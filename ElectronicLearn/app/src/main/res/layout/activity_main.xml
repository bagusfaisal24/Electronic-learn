<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2c5bf7"
    android:orientation="vertical"
    android:id="@+id/l1"
    tools:context="com.example.bagus.electroniclearn.MainActivity">

                <TextView
                    android:id="@+id/judul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Media Pembelajaran Pengenalan Alat Elektronik"
                    android:textColor="#070707"
                    android:textAlignment="center"
                    android:textSize="45px"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_below="@+id/judul"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="75dp"
                    android:src="@drawable/a" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5"
        android:background="#668271"
        android:scrollbarTrackVertical="@drawable/vertical_scrollview_line">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#efefef">


            <Button
                android:id="@+id/btn2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/gradient"
                android:text="materi"
                android:textSize="17dip" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/gradient"
                android:text="latihan"
                android:textSize="17dip" />


            <Button
                android:id="@+id/btn5"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/gradient"
                android:text="about"
                android:textSize="17dip" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/gradient"
                android:text="PETUNJUK"
                android:textSize="17dip" />

        </RelativeLayout>

    </ScrollView>
</LinearLayout>

