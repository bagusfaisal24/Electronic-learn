<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/materi"
    android:background="#d2e3f4"
    android:orientation="vertical"
    tools:context="com.example.bagus.electroniclearn.MainActivity">
    <Button
        android:id="@+id/btn1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/gradient"
        android:text="Elektronik dapur"
        android:textSize="17dip"/>
    <Button
    android:id="@+id/btn2"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btn1"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="12dp"
    android:background="@drawable/gradient"
    android:text="Elektronik ruangan"
    android:textSize="17dip"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/gradient"
        android:text="Elektronik kamar mandi"
        android:textSize="17dip"/>

</RelativeLayout>